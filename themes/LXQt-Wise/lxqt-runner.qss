/* Dropdown panel */
#panel {
    color: #212121;
    background: transparent;
    border: 2px solid transparent;
    border-image: url(assets/buttons/button.png);
}

/* Buttons */
QToolButton {
    color: #212121;
    background: transparent;
    border: 2px solid transparent;
    border-image: none;
    padding: 3px;
}

QToolButton:hover {
    border-image: url(assets/buttons/button.png);
}

QToolButton:pressed {
    border-image: url(assets/buttons/button-pressed.png);
}

QToolButton::menu-indicator {
    image: none;
}

#closeButton {
    qproperty-icon: url(assets/icons/cancel.svg);
    qproperty-iconSize: 16px;
}

#actionButton {
    qproperty-icon: url(assets/icons/menu.svg);
    qproperty-iconSize: 16px;
}

/* Command box */
#commandEd {
    color: #101010;
    background: #f3f3f3;
    border: 2px solid transparent;
    border-image: url(assets/boxes/entry.png);
    padding: 2px;
    selection-color: #ffffff;
    selection-background-color: #97bf60;
    font: normal;
}

/* Search results */
#commandList {
    color: #101010;
    background: #f3f3f3;
    border-bottom: 1px solid #aaaaaa;
    border-left: 1px solid #aaaaaa;
    border-right: 1px solid #aaaaaa;
    border-top: none;
}

#commandList::item,
#commandList::item:alternate {
    color: #101010;
    background: #f3f3f3;
}

#commandList::item:hover,
#commandList::item:selected,
#commandList::item:selected:hover {
    color: #ffffff;
    background: #97bf60;
}

/* Menus */
QMenu {
    color: #101010;
    background: #f3f3f3;
    border: 1px solid #aaaaaa;
    min-width: 120px;
}

QMenu::item {
    color: #101010;
    background: transparent;
    border: 0px solid transparent;
    border-image: none;
    min-width: 120px;
    min-height: 24px;
    padding: 0px 5px 0px 3px;
}

QMenu::item:hover,
QMenu::item:selected {
    color: #ffffff;
    border-image: url(assets/menus/menuitem.png);
}

QMenu::item:disabled {
    color: #808080;
}

QMenu::icon {
    margin-left: 5px;
}

QMenu::indicator {
    margin-left: 4px;
}

/* Scrollbars */
QScrollBar:vertical {
    color: transparent;
    background: transparent;
    background-image: url(assets/scrollbars/scrollbar-v.png);
    background-repeat: repeat-y;
    background-position: center;
    background-attachment: fixed;
    width: 15px;
    padding: 3px;
}

QScrollBar::handle:vertical {
    border: 2px solid transparent;
    border-image: url(assets/scrollbars/handle-v.png);
    width: 15px;
    min-height: 24px;
}

QScrollBar::handle:hover:vertical,
QScrollBar::handle:pressed:vertical {
    border-image: url(assets/scrollbars/handle-v-active.png);
}

QScrollBar::add-line:vertical,
QScrollBar::sub-line:vertical,
QScrollBar::add-line:horizontal,
QScrollBar::sub-line:horizontal {
    width: 0px;
    height: 0px;
}
