Notification {
    color: #101010;
    background: #f3f3f3;
    border: 1px solid #aaaaaa;
    border-radius: 2px;
}

QLabel {
    color: #101010;
}

#appLabel {
    font-weight: bold;
}

#closeButton {
    color: #212121;
    background: none;
    border: 2px solid transparent;
    border-image: none;
    margin: 2px;
    padding: 2px;
    qproperty-icon: url(assets/icons/cancel.svg);
}

#closeButton:hover {
    border-image: url(assets/buttons/button-hover.png);
}

#closeButton:pressed {
    border-image: url(assets/buttons/button-pressed.png);
}
